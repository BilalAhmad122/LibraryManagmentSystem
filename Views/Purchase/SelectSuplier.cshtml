@model IEnumerable<Data_Base_Layer.SuplierTable>

@{
    ViewBag.Title = "Finalize Purchasing";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
@using (Html.BeginForm("PurchaseConfirm", "Purchase", FormMethod.Post))

{
    <dic class="card">
        <div class="card card-flat">
            <div class="card-header">
                <input type="submit" style="float:right;" value="Finalize Purchase" class="btn btn-success" />
            </div>
            <div class="card-body">
                <!...start table responsive......>
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="dataTable">
                        <thead style="background-color:lightgray;">
                            <tr>

                                <th>
                                    Suplier
                                </th>
                                <th>
                                   Contact No
                                </th>
                                <th>
                                    Suplier Email
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SuplierName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                <input type="checkbox" name="name @item.SuplierID" class="chb" />      
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </dic>

}
<script type="text/javascript">
    $(document).ready(){
       
        $(".chb").change(function (event) {
            $(".chb").prop('cheked', false);
            $(".chb").prop('cheked', true);

        });
    });
</script>