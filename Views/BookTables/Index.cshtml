@model IEnumerable<Data_Base_Layer.BookTable>

@{
    ViewBag.Title = "All Books";
}

<p>
    @Html.ActionLink("New Book", "Create",null,new { @class = "btn btn-success" })
</p>
<table class="table table-hover">
    <tr>
        <th>
          Book Title
        </th>
        <th>
            Short Description
        </th>
        <th>
          Book Name
        </th>
        <th>
         Addition
        </th>
        <th>
            Book Type
        </th>
        <th>
            Departmant
        </th>
        <th>
           User
        </th>
        <th>
           Book Desciption
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShotDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adition)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.BookTypeTable.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentTable.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserTable.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssueBookTable.Description)
        </td>
        <td>
            @Html.ActionLink("Update", "Edit", new { id=item.BookID },new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "Details", new { id=item.BookID },new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
